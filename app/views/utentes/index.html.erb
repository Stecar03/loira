<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-center text">
    <h1>UTENTI</h1>
</div>

<br>

<table class="table">
  <thead>
    <tr>
      <th>Cognome</th>
      <th>Nome</th>
      <th>Indirizzo</th>
      <th>Numero</th>
      <th>Annotazioni</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @utentes.each do |utente| %>
      <tr>
        <td><%= utente.cognome %></td>
        <td><%= utente.nome %></td>
        <td><%= utente.indirizzo %></td>
        <td><%= utente.numero %></td>
        <td><%= utente.annotazioni %></td>
        <td><%= link_to 'Mostra', utente, class:"btn btn-info w-100" %></td>
        <td><%= link_to 'Modifica', edit_utente_path(utente), class:"btn btn-warning w-100" %></td>
        <td><%= link_to 'Elimina', utente, method: :delete, data:{ confirm: 'SEI SICURO?' }, class:"btn btn-danger w-100" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

